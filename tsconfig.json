{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "esnext",
    "target": "ES2020",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@theme-hope/*": ["node_modules/vuepress-theme-hope/lib/client/*"],
      "vuepress-theme-hope/*": ["node_modules/vuepress-theme-hope/lib/*"]
    }
  },
  "include": [
    "env.d.ts",
    "src/.vuepress/**/*.ts",
    "src/.vuepress/**/*.js",
    "src/.vuepress/**/*.vue"
  ],
  "exclude": ["node_modules", "dist", "draft"]
}
